@model Tip

@{
    ViewData["Title"] = "EditTipShow";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <center>
            <h1>Update Tip</h1>
            <hr />
        </center>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form method="post" asp-controller="Tip"
                      asp-action="EditTipUpdate" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img src="https://do3jpz7qc76yu.cloudfront.net/@Model.Tip_Photo" style="max-width:500px">
                    </div>
                    <div class="form-group mb-3" style="text-align:center">
                        <input type="file" name="imagefiles" accept="image/*"
                               multiple />
                    </div>
                    <div class="form-group">
                        <label asp-for="TipID" class="control-label"></label>
                        <input asp-for="TipID" class="form-control" readonly />
                        <span asp-validation-for="TipID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tip_Title" class="control-label"></label>
                        <input asp-for="Tip_Title" class="form-control" />
                        <span asp-validation-for="Tip_Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tip_Description" class="control-label"></label>
                        <textarea asp-for="Tip_Description"
                                  class="form-control"></textarea>
                        <span asp-validation-for="Tip_Description"
                              class="text-danger"></span>
                    </div><br>

                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary"
                           asp-controller="Tip" asp-action="Index">
                            Show
                            All
                        </a>
                        <input type="submit" value="Update"
                               class="btn btn-outline-success float-right" />
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>