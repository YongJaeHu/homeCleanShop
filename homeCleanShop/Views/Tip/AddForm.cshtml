@model homeCleanShop.Models.Tip
@{
    ViewData["Title"] = "AddForm";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <center><h3>Add Tip</h3><hr /></center>
        <form asp-action="AddForm" asp-controller="Tip" method="post"
              enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8 offset-2">

                    <div asp-validation-summary="ModelOnly" class="text-danger"
                         role="alert"></div>
                    <div class="form-group mb-3">
                        <label class="control-label">Tip Title</label>
                        <input asp-for="Tip_Title" class="form-control" />
                        <span asp-validation-for="Tip_Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Tip Description</label>
                        <textarea type="text" asp-for="Tip_Description"
                                  class="form-control"></textarea>
                        <span asp-validation-for="Tip_Description"
                              class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label>Choose Tip Photo: </label>
                        <input type="file" name="imagefiles" accept="image/*"
                               multiple />
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            Show
                            All
                        </a>
                        <input type="submit" value="Add"
                               class="btn btn-outline-success float-right" />
                        
                    </div>
        </form>
    </div>
</div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}