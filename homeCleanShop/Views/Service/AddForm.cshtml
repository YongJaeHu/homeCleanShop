@model homeCleanShop.Models.Service
@{
    ViewData["Title"] = "AddForm";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <center>
            <h3>Add Service</h3>    
                <hr />
            </center>
        <form asp-action="AddForm" asp-controller="Service" method="post"
              enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"
                         role="alert"></div>
                    <div class="form-group mb-3">
                        <label asp-for="ServiceName" class="control-label"></label>
                        <input asp-for="ServiceName" class="form-control" />
                        <span asp-validation-for="ServiceName"
                              class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ServiceDescription"
                               class="control-label"></label>
                        <input type="text" asp-for="ServiceDescription"
                               class="form-control" />
                        <span asp-validation-for="ServiceDescription"
                              class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ServicePrice" class="control-label"></label>
                        <input asp-for="ServicePrice" class="form-control" />
                        <span asp-validation-for="ServicePrice"
                              class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ServiceTime" class="control-label"></label>
                        <input asp-for="ServiceTime" class="form-control" />
                        <span asp-validation-for="ServiceTime"
                              class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label>Choose Service Photo: </label>
                        <input type="file" name="imagefiles" accept="image/*"
                               multiple />
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            Show
                            All
                        </a>
                        <input type="submit" value="Add"
                               class="btn btn-outline-success float-right" />
                        
                    </div>
        </form>
    </div>
</div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}