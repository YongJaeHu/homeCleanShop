@model List<Service>
@{
    ViewData["Title"] = "index";
}
<head>
</head>
<center>
    <h1>Service List</h1>
    <hr />
</center>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Service Picture</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Action</th>
                    <th>
                        <a class="btn btn-outline-primary" asp-action="AddForm" asp-controller="Service">
                            <i class="bi bi-file-earmark-plus"></i>Add
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td class="align-middle">@service.ID</td>
                        <td class="align-middle">
                            <img src="https://do3jpz7qc76yu.cloudfront.net/@service.ServicePhoto" style="max-width:150px">
                        </td>
                        <td class="align-middle">@service.ServiceName</td>
                        <td class="align-middle">@service.ServiceDescription</td>
                        <td class="align-middle">@service.ServicePrice</td>
                        <td class="align-middle">@service.ServiceTime</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-secondary"
                               asp-action="EditServiceShow"
                               asp-controller="Service"
                               asp-route-ServiceID="@service.ID">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a class="btn btn-outline-danger"
                               asp-action="ServiceDelete"
                               asp-controller="Service"
                               asp-route-ServiceID="@service.ID"
                               onclick="return deleteCheck()">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    function deleteCheck() {
        if (window.confirm('Are you sure to delete?')) {
            return true;
        } else {
            window.alert('Canceled');
            return false;
        }
    }
</script>